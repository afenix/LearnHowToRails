<h1><%= @lesson.title %></h1>

<h4><%= @lesson.body %></h4>

<h5><%= @lesson.number %></h5>

<p><%= link_to "Edit", edit_lesson_path(@lesson) %></p>

<p><%= link_to "Delete", lesson_path(@lesson),
                          :data => {:confirm => "Are you absolutely sure? This will destroy your lesson!",
                          :method => "delete"}%></p>


<p><% if @lesson.prev %></p>
  <%= link_to "<= Previous", lesson_path(@lesson.prev) %>
<% end %>
<p><% if @lesson.next %></p>
  <%= link_to "Next =>", lesson_path(@lesson.next) %>
<% end %>
<br />
<br />
<%= link_to "View all lessons", lessons_path %>
